#!/bin/sh
#
# NXP fmuk66-v3 specific board defaults
#------------------------------------------------------------------------------


# Possible external compasses
hmc5883 -C -X start
lis3mdl -X start
ist8310 -C -b 1 start
qmc5883 -X start

# Internal Mag I2C bus roll 180, yaw 90
bmm150 -R 10 start

# Onboard I2C baros
bmp280 -I start
mpl3115a2 -I start

# Internal SPI (accel + mag)
fxos8701cq start -R 0

# Internal SPI (gyro)
fxas21002c start
